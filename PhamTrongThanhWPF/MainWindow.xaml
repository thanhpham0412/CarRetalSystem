<Window x:Class="PhamTrongThanhWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamTrongThanhWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Width="200" Background="#C0CCD0">
            <Label Name="lblWelcome" FontWeight="DemiBold" FontSize="20" HorizontalAlignment="Left" Padding="20 0 0 0"
                   Content="Welcome: Thanh"></Label>
            <Label Name="lblRole" FontWeight="DemiBold" FontSize="20" HorizontalAlignment="Left" Padding="20 0 0 0"
                   Content="Role: Staff"></Label>
            <StackPanel Name="spButton" Orientation="Vertical">
                
            </StackPanel>
        </StackPanel>
        <StackPanel Width="600">
            <Frame Name="mainFrame" Background="LightGray" Width="600" Height="450"></Frame>
        </StackPanel>
    </StackPanel>
</Window>
