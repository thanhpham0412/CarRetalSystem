<Window x:Class="PhamTrongThanhWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamTrongThanhWPF"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <StackPanel Orientation="Vertical">
        <Label Name="lblLogin" FontWeight="DemiBold" FontSize="20" HorizontalAlignment="Center"
                   Content="Login"></Label>
        <StackPanel Orientation="Horizontal" Margin="50 0 50 10">
            <Label Name="lblUserName" FontSize="16" Width="100" Content="User Name"></Label>
            <TextBox Name="txtUserName" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="50 0 50 10">
            <Label Name="lblPassword" FontSize="16" Width="100" Content="Password"></Label>
            <PasswordBox Name="txtPassword" Width="150"></PasswordBox>
        </StackPanel>
        <Button Name="btnLogin" Content="Login" Margin="120 20 120 0" Padding="5" Click="btnLogin_Click"></Button>
    </StackPanel>
</Window>
